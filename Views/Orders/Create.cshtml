@model Bar.Models.OrderViewModel

@{
    ViewData["Title"] = "Place Order";
}

<h1>Order</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Order.CustomerName" class="control-label"></label>
                <input asp-for="@Model.Order.CustomerName" class="form-control" />
                <span asp-validation-for="@Model.Order.CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.BarMenu.ID" class="control-label"></label>
                <input asp-for="@Model.Order.MenuID" value="@Model.BarMenu.ID" class="form-control" min="1" max="3"/>
                <span asp-validation-for="@Model.BarMenu.ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
